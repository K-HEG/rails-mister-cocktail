<div class="container">
  <h1><%= @cocktail.name %></h1>
  <br>
  <div class="cocktail-body">
    <img src="<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>" alt="">
    <div class="cocktail-body-text">
<!--       <h4>Description</h4>
      <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Porro, tempore, sit. Nobis necessitatibus hic ea. Amet nobis ducimus cupiditate deserunt culpa optio dolores omnis nemo? Illum, maxime architecto a dignissimos!</p> -->
     <!--  <br> -->
      <h4>Ingredients</h4>
      <ul class="list-group list-group-flush">
        <% @cocktail.doses.each do |dose| %>
        <li class="list-group-item"><%= dose.description %> of <%= dose.ingredient.name.capitalize %> <%= link_to "✖️", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?"} %></li>
        <% end %>
      </ul>
      <br>
      <%= link_to "✚ Add ingredients", new_cocktail_dose_path(@cocktail), class: "btn" %>
      <hr>
    </div>
  </div>
  <hr>
  <%= link_to "↩ Back to cocktails", cocktails_path, class: "btn" %>
</div>
